---
interface Props {
  href: string;
}

const { href } = Astro.props;
---

<a class="buttonAnchor" href={href}><slot /></a>

<style is:global>
  .buttonAnchor {
    text-decoration: none;
    color: inherit;
    border-radius: 0.25em;
    padding: 0.3em 1.2em;
    font-size: 1.2rem;

    &:focus {
      outline: var(--outline);
    }

    &:hover {
      background-color: #ffffff30;
    }
  }
</style>
